def square(num1):
  print("\nThe squrare root of, " + (str(num1)) + " is - \n")
  print(math.sqrt(num1))




def triangle(a, b):
  a2 = a*a
  b2 = b*b
  c2 = a2+b2
  print(str(a) + "^2 + " + (str(b)) + "^2 = \n\na^2 + b^2 = c^2\n\nc^2 = \n")
  return c2

