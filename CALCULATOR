try:
  if factor == "/" or " /" or " / ":
    print(num1/num2)
  elif factor == "+" or " +" or " + ":
    print(num1+num2)
  elif factor == "*" or " *" or " * ":
    print(num1*num2)
  elif factor == "-" or " -" or " - ":
    print(num1-num2)
  else:
    print("this is broken thanks.")
