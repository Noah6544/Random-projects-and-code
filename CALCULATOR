#BASIC CALCULATOR
#IMPORTS

import math
import random
import sys

#FUNCTIONS

def add(first, second):
    print("\nfirst + second = ")
    return (first+second)


def subtract(first, second):
    print("first-second = ")
    print(first-second)
    print("\nsecond-first = ")
    print(second-first)
    print("")


def multiply(first, second):
  print((str(first)) + "*" + (str(second)) + "=")
  return (first*second)


def divide(num1, num2):
  print((str(num1)) +"/" + (str(num2)) +  " = ")
  print (num1/num2)
  print((str(num2)) +"/" + (str(num1)) +  " = ")
  print(num2/num1)
  print("")


def square(first, second):
    print("\nThis is the square of the first number you put:\n")
    print(first*first)
    print("\nThis is the square of the second number you put:")
    print(second*second)
    print("")




